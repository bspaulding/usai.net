<%= render :partial => 'admin_nav' %>

<div id="subMain">
<h1>Manage Articles</h1>
<b>Total Articles:</b> <%= @news_items.size %>
<ol>
<% @news_items.each do |article| %>
<li>
	<b><%= link_to article.title, article %></b> [<%= link_to "Edit", edit_news_item_url(article) %> | <%= link_to "Delete", url_for(:controller => "news_items", :action => "destroy", :id => article.id), :confirm => "Are you sure you want to delete article: '#{article.title}'?\n\nThis operation CAN NOT be undone!", :method => 'delete' %>]<br/>
	<ul>
		<li>Created At: <%= article.created_at %></li>
		<li>Updated At: <%= article.updated_at %></li>
	</ul>
</li>
<% end %>
</ol>
</div>